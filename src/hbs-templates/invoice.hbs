{{! Rent Invoice Template }}
<!DOCTYPE html>
<html>

<head>
  <title>Rent Invoice</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    .invoice-box {
      max-width: 800px;
      margin: auto;
      padding: 20px;
      border: 1px solid #eee;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
    }

    .header {
      text-align: center;
      font-size: 20px;
      font-weight: bold;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    table,
    th,
    td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }

    .total {
      text-align: right;
      font-weight: bold;
    }
  </style>
</head>

<body>
  <div class="invoice-box">
    <div class="header">Rental Invoice</div>
    <p><strong>To:</strong> {{recipient.name}}</p>
    <p><strong>Mobile:</strong> {{recipient.mobile}}</p>
    <p><strong>Address:</strong> {{recipient.address}}</p>
    <p><strong>Invoice No:</strong> {{invoice.number}}</p>
    <p><strong>Date:</strong> {{invoice.date}}</p>

    <table>
      <thead>
        <tr>
          <th>SR</th>
          <th>PRODUCT</th>
          <th>DESCRIPTION</th>
          <th>DELIVERY DATE</th>
          <th>RETURN DATE</th>
          <th>QTY</th>
          <th>RATE</th>
          <th>TOTAL</th>
        </tr>
      </thead>
      <tbody>
        {{#each invoice.items}}
        <tr>
          <td>{{this.sr}}</td>
          <td>{{this.product}}</td>
          <td>{{this.description}}</td>
          <td>{{this.deliveryDate}}</td>
          <td>{{this.returnDate}}</td>
          <td>{{this.qty}}</td>
          <td>{{this.rate}}</td>
          <td>{{this.total}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <p class="total">Total: {{invoice.total}}</p>
    <p class="total">Discount: {{invoice.discount}}</p>
    <p class="total">Deposit: {{invoice.deposit}}</p>
    <p class="total">Advance: {{invoice.advance}}</p>
    <p class="total">Received: {{invoice.received}}</p>
    <p class="total">Outstanding: {{invoice.outstanding}}</p>

    <p><strong>Prepared by:</strong> {{invoice.preparedBy}}</p>
    <p class="note">This is a computer-generated document and does not require a signature.</p>
  </div>
</body>

</html>